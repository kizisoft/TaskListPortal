@model IEnumerable<TaskListPortal.MVC.ViewModels.GitHub.GitHubRepositoryShortViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>List of all user repositories</h2>
        <hr />

        @if (Model.FirstOrDefault() == null)
        {
            <p class="alert-danger">This GitHub account has no repositories!</p>
        }
        else
        {
            <ul>
                @foreach (var repo in Model)
                {
                    <li>@Html.ActionLink(repo.Name, "Index", "Repository", new { name = repo.Name }, null)</li>
                }
            </ul>
        }
    </div>
</div>