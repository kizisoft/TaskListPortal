@model TaskListPortal.MVC.ViewModels.GitHub.GitHubUserViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>GitHub Profile Information</h2>
        <hr />

        @if (string.IsNullOrEmpty(Model.Username))
        {
            <p class="alert-danger">Wrong GitHub Username!</p>
        }
        else
        {
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Id)</dt>
                <dd>@Html.DisplayFor(model => model.Id)</dd>

                <dt>@Html.DisplayNameFor(model => model.Username)</dt>
                <dd>@Html.DisplayFor(model => model.Username)</dd>

                <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
                <dd>@Html.DisplayFor(model => model.FullName)</dd>

                <dt>@Html.DisplayNameFor(model => model.Location)</dt>
                <dd>@Html.DisplayFor(model => model.Location)</dd>

                <dt>@Html.DisplayNameFor(model => model.GitHubUrl)</dt>
                <dd><a href="@Model.GitHubUrl" target="_blank">@Model.GitHubUrl</a></dd>
            </dl>
        }
    </div>
</div>